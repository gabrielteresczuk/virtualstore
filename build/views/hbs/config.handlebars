    <main id="app">
        <div class="contenedor_config">
            <div class="titulo">
                <h1>Configuracion Handlebars :{</h1>

            </div>
            <p class="texto_ayuda">Aqui podra ver las configuraciones en formato hbs</p>
            <b>Variables de Entorno</b>
            <ul class="ul_config">
                <li><b>Ambiente:</b> {{config.NODE_ENV}}</li>
                    <li><span>desarrollo / produccion</span></li>
                <li><b>Puerto:</b> {{config.PORT}}</li>
                <li><b>DAO:</b> {{config.DAO}}</li>
                    <li><span>archivo / memoria / mongo / sql</span></li>
                <li><b>MODO:</b> {{config.MODO}}</li>
                    <li><span>fork / cluster</span></li>
                <li><b>MAIL:</b> {{config.MAIL}}</li>
                <li><b>MAIL_PASS:</b> {{config.MAIL_PASS}}</li>
                <li><b>TWILIO_SID:</b> {{config.TWILIO_SID}}</li>
                <li><b>TWILIO_TOKEN:</b> {{config.TWILIO_TOKEN}}</li>
                <li><b>SESSION_MIN:</b> {{config.SESSION_MIN}}</li>
                    <li><span>en minutos</span></li>
            </ul>
        </div>
    
    </main>
